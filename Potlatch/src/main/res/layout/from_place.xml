<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:id="@+id/layout_from_place"
              android:layout_height="match_parent" android:background="@color/gray">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_from_camera"
            android:layout_weight="1"
            android:src="@drawable/camera"
            android:background="@color/white" android:layout_marginRight="1dp" android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:onClick="clickCamera"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_from_directory"
            android:layout_weight="1"
            android:src="@drawable/folder"
            android:background="@color/white" android:layout_marginRight="2dp" android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" android:layout_marginLeft="1dp" android:onClick="clickDirectory"/>
</LinearLayout>